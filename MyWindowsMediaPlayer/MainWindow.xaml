<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWindowsMediaPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="466" Width="1000">
    <Grid Margin="0">
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem x:Name="openButton" Header="_Open"/>
                    <MenuItem Header="_Close"/>
                    <MenuItem Header="_Save"/>
                </MenuItem>
            </Menu>
            <StackPanel>
            </StackPanel>
        </DockPanel>
        <DockPanel Margin="10,30,643,10">
            <Label Content="Filtres: " HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0">
                <ComboBox Width="120">
                    <ComboBoxItem x:Name="Playlist" Content="Playlist"/>
                    <ComboBoxItem x:Name="Video" Content="Video"/>
                    <ComboBoxItem x:Name="Photos" Content="Photos"/>
                    <ComboBoxItem x:Name="Music" Content="Music"/>
                </ComboBox>
            </StackPanel>

            <ListView x:Name="lstData" ItemsSource="{Binding}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Product ID" Width="Auto" DisplayMemberBinding="{Binding Path=ProductId}" />
                        <GridViewColumn Header="Product Name" Width="Auto" DisplayMemberBinding="{Binding Path=ProductName}" />
                        <GridViewColumn Header="Price" Width="Auto" DisplayMemberBinding="{Binding Path=Price}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
        <Grid Margin="0,20,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" Height="392" Width="638" Background="Black" OpacityMask="Black">
            <MediaElement x:Name="mediaScreen" LoadedBehavior="Manual" UnloadedBehavior="Stop" Stretch="Fill" MediaOpened="Element_MediaOpened" MediaEnded="Element_MediaEnded"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="34"/>
                    <RowDefinition Height="34" />
                </Grid.RowDefinitions>
                <DockPanel Grid.Row="0">
                    <Label Content="BRA" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </DockPanel>
                <DockPanel Grid.Row="1">
                    <Label x:Name="timeSliderCurrentTime" Margin="10,0,10,0" Width="40" Content="0.0" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.7" Foreground="White" HorizontalContentAlignment="Center"/>
                    <Slider x:Name="timeSlider" Width="520" Opacity="0.7" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,6"/>
                    <Label x:Name="timeSliderMaxTime" Margin="10,0,10,0" Width="40" Content="0.0" VerticalAlignment="Center" Opacity="0.7" Foreground="White" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
                </DockPanel>
                <DockPanel Grid.Row="2">
                    <Button x:Name="playButton" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Opacity="0.7">
                        <Image x:Name="playButtonImage" />
                    </Button>
                    <Button x:Name="nextButton" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Opacity="0.7">
                        <Image x:Name="nextButtonImage" />
                    </Button>
                    <Button x:Name="prevButton" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Opacity="0.7">
                        <Image x:Name="prevButtonImage" />
                    </Button>
                </DockPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
